generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ShortenedUrl {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  originalUrl String
  createdAt   DateTime @default(now())

  @@map("shortened_urls")
}
